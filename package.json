{
  "name": "nyaru",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @nyaru/web",
    "dev:bot": "npm run dev -w @nyaru/bot",
    "dev": "concurrently -n web,bot -c blue,green \"npm run dev:web\" \"npm run dev:bot\"",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
