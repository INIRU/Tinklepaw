{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "nyaru-launcher",
  "version": "0.1.0",
  "identifier": "gg.nyaru.launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "방울냥 런처",
        "width": 960,
        "height": 560,
        "resizable": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "TAURI_UPDATER_PUBKEY_PLACEHOLDER",
      "endpoints": [
        "https://github.com/INIRU/Tinklepaw/releases/latest/download/latest.json"
      ]
    }
  }
}
